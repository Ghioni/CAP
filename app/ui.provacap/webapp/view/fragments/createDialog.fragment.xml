<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
>
<Dialog
      id="createDialog"
      title="Insert"
      >
        <f:SimpleForm 
        layout="ResponsiveGridLayout"
        >
        <f:toolbar>
            <Toolbar>
                <Title text="Form"/>
            </Toolbar>
        </f:toolbar>
        <f:content>
            <Label text="ID" />
            <Input value="{formModel>/Id}" type="Number"/>
            <Label text="Name" />
            <Input value="{formModel>/Name}"/>


            <Button text="Add" press="onPressCreate"/>
            <Button text="Close" press="closeOnPress"/>
        </f:content>
    </f:SimpleForm>
      
   </Dialog>
</c:FragmentDefinition>