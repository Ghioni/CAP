<mvc:View
	controllerName="ui.provacap.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
    <VBox >
    <FlexBox 	alignItems="Center"
				justifyContent="Center">
    
    <Table id="2"
		inset="false"
		items="{
			path: 'Prova>/'
		}"
        width="80%"
        >
				<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="My table" level="H2"/>
					<ToolbarSpacer />
					<Label text="Create:" />
					<Button text="add" press="onPressCreateDialog" icon="sap-icon://create-form"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column width="4rem"
                >
				<Text text="ID" />
			</Column>
			<Column
				>
				<Text text="Name" />
			</Column>
			<Column
				>
				<Text text="Date" />
			</Column>
            			<Column width="4rem"
				>
                			</Column>
            			<Column width="4rem"
				>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text
						text="{path: 'Prova>Id'}" />
					<Text
						text="{path: 'Prova>Name'}" />
					<Text
						text="{path: 'Prova>Date'}" />
                    <Button press="onPressGetObj" icon="sap-icon://edit"/>
                    <Button press="onPressDelete" icon="sap-icon://delete"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>


    </FlexBox>
    </VBox>
	
</mvc:View>